{
  "name": "cdt-fundraiser",
  "packageManager": "bun@1.0.25",
  "scripts": {
    "db": "docker-compose up -d && bun drizzle",
    "dev": "bun ./scripts/clear-db.ts && bun --hot ./src/server.tsx",
    "drizzle": "drizzle-kit push:pg",
    "e2e": "bun drizzle && bun dev & cypress run",
    "format": "prettier --write . && terraform fmt terraform",
    "format-check": "prettier --check . && terraform fmt -check terraform",
    "lint": "eslint . --fix --max-warnings=0",
    "preprod": "tailwindcss -o ./public/globals.css",
    "prod": "ENVIRONMENT=production bun ./src/server.tsx",
    "tdd": "bun dev & cypress open --e2e --browser chrome",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@elysiajs/static": "0.8.1",
    "@headlessui/react": "1.7.18",
    "@tanstack/react-query": "5.17.19",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "arktype": "1.0.29-alpha",
    "bun-types": "1.0.25",
    "drizzle-kit": "0.20.13",
    "drizzle-orm": "0.29.3",
    "elysia": "0.8.10",
    "elysia-hot-module-reload": "1.0.1",
    "postgres": "3.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.12",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@testing-library/cypress": "10.0.1",
    "@types/testing-library__cypress": "5.0.13",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "cypress": "13.6.3",
    "eslint": "8.56.0",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.5.11",
    "typescript": "5.3.3"
  }
}
